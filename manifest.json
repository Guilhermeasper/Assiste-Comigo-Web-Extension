        "content/vimeo.js",
        "content/goyabu.js",
        "content/htmlVideoController.js"
      ],
      "matches" : [
        "https://www.primevideo.com/*",
        "https://www.viki.com/*",
        "https://www.anitube.site/*",
        "https://www.youtube.com/*",
        "https://www.netflix.com/*",
        "https://www.crunchyroll.com/*",
        "https://www.vimeo.com/*",
        "https://tv.apple.com/*",
