{
  "name": "Watch Together",
  "version": "0.0.1",
  "description": "Assista a v√≠deos com seus amigos",
  "permissions": [
    "tabs",
    "https://www.primevideo.com/*",
    "https://www.viki.com/*",
    "declarativeContent",
    "storage"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["socket.io.js","jquery.js", "content_script.js"],
      "matches": ["*://*.primevideo.com/*", "*://primevideo.com/*", "*://*.viki.com/*"],
      "run_at": "document_end"
    }
  ],
  "icons": {
	"16": "icon16.png",
	"32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
},
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ https://*.cloudflare.com https://www.googleapis.com; object-src 'self';",
  "manifest_version": 2
}
