{
    "name": "Assiste Comigo",
    "version": "0.5.2",
    "description": "Assista a v√≠deos com seus amigos",
    "icons": {
        "16": "./icons/ac16.png",
        "32": "./icons/ac32.png",
        "48": "./icons/ac48.png",
        "128": "./icons/ac128.png"
    },
    "permissions": [
        "tabs",
        "*://*/*",
        "https://www.primevideo.com/*",
        "https://www.viki.com/*",
        "https://www.anitube.site/*",
        "https://www.youtube.com/*",
        "https://www.netflix.com/*",
        "https://www.crunchyroll.com/*",
        "https://www.vimeo.com/*",
        "declarativeContent",
        "storage"
    ],
    "browser_action": {
        "default_icon": "./icons/ac48.png",
        "default_popup": "./popupViews/homepageView/homepage.html"
    },
    "externally_connectable": {
        "matches": ["https://www.netflix.com/*"]
    },
    "content_scripts": [
        {
            "js": [
                "./libs/socket.io.js",
                "./libs/jquery.js",
                "./contentScripts/mainContentScript.js"
            ],
            "matches": [
                "*://*.primevideo.com/*",
                "*://*.viki.com/*",
                "*://*.anitube.site/*",
                "*://*.youtube.com/*",
                "*://*.crunchyroll.com/*",
                "*://*.vimeo.com/*",
                "*://*.netflix.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "page": "./background/background.html",
        "persistent": true
    },
    "web_accessible_resources": ["contentScripts/netflixScript.js", "contentScripts/youtube.js"],
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ https://*.cloudflare.com https://www.googleapis.com; object-src 'self';",
    "manifest_version": 2
}
