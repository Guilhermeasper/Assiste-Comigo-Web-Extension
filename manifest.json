{
    "name": "Assiste Comigo",
    "version": "1.0.1",
    "description": "Assista a v√≠deos com seus amigos",
    "permissions": [
        "tabs",
        "https://www.primevideo.com/*",
        "https://www.viki.com/*",
        "https://www.anitube.site/*",
        "https://www.youtube.com/*",
        "https://www.netflix.com/*",
        "declarativeContent",
        "storage"
    ],
    "page_action": {
        "default_icon": "./icons/icon48.png",
        "default_popup": "./popupViews/homepageView/homepage.html"
    },
    "content_scripts": [
        {
            "js": [
                "./libs/socket.io.js",
                "./libs/jquery.js",
                "/utils/utils.js",
                "./contentScripts/mainContentScript.js"
            ],
            "matches": [
                "*://*.primevideo.com/*",
                "*://*.viki.com/*",
                "*://*.anitube.site/*",
                "*://*.youtube.com/*",
                "*://*.netflix.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ https://*.cloudflare.com https://www.googleapis.com; object-src 'self';",
    "manifest_version": 2
}
